<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageonclick"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_main"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:padding="1.2dp"
        android:scaleType="fitXY"
        android:background="@color/white"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/image_main"
        android:layout_alignBottom="@id/image_main"
        android:layout_alignStart="@id/image_main"
        android:layout_alignTop="@id/image_main"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        tools:text="WOOW" />
</RelativeLayout>
